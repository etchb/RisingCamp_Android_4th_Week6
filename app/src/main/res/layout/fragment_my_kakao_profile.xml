<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.main.myProfile.MyKakaoProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/tlblay_my_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0">
        </View>
        <androidx.cardview.widget.CardView
            android:id="@+id/cdv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tlblay_my_profile"
            app:layout_constraintBottom_toTopOf="@+id/txt_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintVertical_chainStyle="packed">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/orange"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_go_login_page"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="로그아웃"
            android:textColor="@color/orange"
            android:background="@drawable/ripple_background"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toTopOf="@+id/cdv_img"
            app:layout_constraintBottom_toBottomOf="@+id/cdv_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="1"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/cdv_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_chainStyle="packed"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_event"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="이벤트"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/setting_event"
            android:drawableRight="@drawable/setting_angbrkta"
            android:background="@drawable/ripple_background_rec"
            app:layout_constraintTop_toBottomOf="@+id/txt_name"
            app:layout_constraintBottom_toTopOf="@+id/btn_setting"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="설정"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/setting_set"
            android:drawableRight="@drawable/setting_angbrkta"
            android:background="@drawable/ripple_background_rec"
            app:layout_constraintTop_toBottomOf="@+id/btn_event"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>